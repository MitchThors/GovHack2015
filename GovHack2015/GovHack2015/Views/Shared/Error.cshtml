@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="row">
    <div class="col-md-12">
        <div class="body-content-item-wrapper">
            <div class="body-content-item">
                <div class="page-title">
                    <h3>Error <small>Exception Details</small></h3>
                </div>
                <div class="page-item">
                    <p>
                        <h4><small><b>Controller:</b></small></h4> @Model.ControllerName
                    </p>
                    <p>
                        <h4><small><b>Action:</b></small></h4> @Model.ActionName
                    </p>
                    <p>
                        <h4><small><b>Exception:</b></small></h4> @Model.Exception
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>